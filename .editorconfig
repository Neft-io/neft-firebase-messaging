root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json}]
indent_style = space
indent_size = 2

[*.{coffee,litcoffee}]
indent_style = space
indent_size = 4

[*.swift]
indent_style = space
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
